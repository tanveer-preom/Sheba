<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tanveer.com.example.tanveer.menu.AccountSelector"
    android:background="#ffffff"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:id="@+id/tt"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/current_acc"
            android:textStyle="bold"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/account"
            android:textColor="#9B000000"
            android:textSize="16sp"
            />

    </LinearLayout>
    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_acc"
        android:text="@string/change"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tt"
        android:onClick="onChange"
        android:background="#ffffff"
        android:textColor="#0000ff"
        android:gravity="left"
        />
    <Button
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text=""
        android:layout_below="@+id/tt"
        android:layout_toRightOf="@+id/change_acc"
        android:onClick="onDone"
        android:background="#ffffff"
        android:textColor="#0000ff"
        />

</RelativeLayout>
